{
  "name": "inset.js",
  "description": "Inset shadows for HTML's <canvas> element.",
  "main": "dist/inset.js",
  "module": "dist/inset.module.js",
  "jsnext:main": "dist/inset.module.js",
  "version": "0.1.0",
  "license": "MIT",
  "repository": "patlillis/inset",
  "author": {
    "name": "Pat Lillis",
    "email": "lillispm@gmail.com",
    "url": "http://pat.lillis.me"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w -m inline",
    "lint": "eslint src test",
    "prebuild": "rm -rf dist",
    "install": "npm run build",
    "prepublishOnly": "npm run test",
    "pretest": "npm run lint && npm run build",
    "test": "npm-run-all --parallel test:start test:open",
    "test:start": "http-server -a localhost -p 8080 -c-1",
    "test:open": "opn http://localhost:8080/test/manual.html",
    "test:phantomjs": "npm run pretest && phantomjs ./node_modules/mocha-phantomjs-core/mocha-phantomjs-core.js test/manual.html"
  },
  "keywords": [
    "canvas",
    "inset",
    "shadow"
  ],
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-preset-env": "^1.2.2",
    "chai": "^3.5.0",
    "eslint": "^3.13.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "http-server": "^0.9.0",
    "imagediff": "^1.0.8",
    "mocha": "^3.2.0",
    "mocha-phantomjs-core": "^2.1.1",
    "npm-run-all": "^4.0.2",
    "opn-cli": "^3.1.0",
    "phantomjs": "^2.1.7",
    "rollup": "^0.41.1",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^3.2.2"
  }
}
